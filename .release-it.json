{
  "github": {
    "release": true
  },
  "git": {
    "commitMessage": "chore(tag): release v${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "strictSemVer": true,
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "✨ 新功能"
          },
          {
            "type": "fix",
            "section": "🐛 问题修复"
          },
          {
            "type": "chore",
            "section": "🔧 构建/工程依赖/工具"
          },
          {
            "type": "docs",
            "section": "📚 文档"
          },
          {
            "type": "style",
            "section": "💄 代码的样式美化"
          },
          {
            "type": "refactor",
            "section": "♻️ 重构"
          },
          {
            "type": "perf",
            "section": "⚡️ 性能优化"
          },
          {
            "type": "test",
            "section": "✅ 测试"
          }
        ]
      }
    }
  }
}
